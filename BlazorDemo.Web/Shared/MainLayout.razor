@inherits LayoutComponentBase

<MudThemeProvider Theme="BlazorDemoTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <AppBar OnDrawerToggle="ToggleDrawer" />
    <NavMenu IsOpen="@isDrawerOpen" />
    <MudMainContent Class="pt-16 px-6">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool isDrawerOpen = true;

    private void ToggleDrawer()
    {
        isDrawerOpen = !isDrawerOpen;
    }

    MudTheme BlazorDemoTheme = new MudTheme
    {
        Palette = new Palette
        {
            Primary = Colors.Teal.Darken1,
            Secondary = Colors.Yellow.Darken1,
            Tertiary = Colors.LightBlue.Default
        },
        LayoutProperties = new LayoutProperties
        {
            DrawerWidthLeft = "300px"
        }
    };
}
