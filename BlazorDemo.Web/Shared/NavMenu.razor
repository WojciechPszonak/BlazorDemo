<MudDrawer @bind-Open="@IsOpen" ClipMode="DrawerClipMode.Docked" Elevation="1">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Blazor Demo</MudText>
    </MudDrawerHeader>
    <MudDivider Class="my-2" />
    <MudNavMenu Class="mud-width-full">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/counter" Icon="@Icons.Filled.Watch">Counter</MudNavLink>
        <MudNavLink Href="/fetchdata" Icon="@Icons.Filled.Storage">Fetch data</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool IsOpen { get; set; }
}
