<MudDrawer @bind-Open="@IsOpen" ClipMode="DrawerClipMode.Docked" Elevation="1">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Blazor Demo</MudText>
    </MudDrawerHeader>
    <MudDivider Class="my-2" />
    <MudNavMenu Class="mud-width-full">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Outlined.Home" IconColor="Color.Secondary">Home</MudNavLink>
        <MudNavGroup Title="Questions" Icon="@Icons.Outlined.LiveHelp" IconColor="Color.Secondary" Expanded="true">
            <MudNavLink Href="/questions" Icon="@Icons.Outlined.List" IconColor="Color.Secondary">Browse</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Surveys" Icon="@Icons.Outlined.AssignmentTurnedIn" IconColor="Color.Secondary" Expanded="true">
            <MudNavLink Href="/surveys" Icon="@Icons.Outlined.List" IconColor="Color.Secondary">Browse</MudNavLink>
            <MudNavLink Href="/surveys/form" Icon="@Icons.Outlined.Add" IconColor="Color.Secondary">New</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>